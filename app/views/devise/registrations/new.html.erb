<center>
<h2>Welcome! Your Sign Up form is below.</h2><br>

<br><br>
<div class = 'container'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<%= f.hidden_field :stripe_card_token %>

<br><br>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true,  class: 'form-control style', placeholder: 'First Name', :required =>true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true,  class: 'form-control style', placeholder: 'Last Name', :required =>true  %>
  </div>
<br><br><br>
<br>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,  class: 'form-control style', placeholder: 'Email', :required =>true  %>
  </div>
  <br>
   <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",  class: 'form-control style', placeholder: 'Password', :required =>true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",  class: 'form-control style', placeholder: 'Password Confirmation', :required =>true  %>
  </div>
<br>
<br>

(the one you'll be texting us from)
<br>
<br>
<br>
  <div class="field">
    <%= f.label :country_code %><br />
    <%= f.text_field :country_code, autofocus: true,  class: 'form-control style', placeholder: 'Country Code', :required =>true  %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autofocus: true,  class: 'form-control style', placeholder: 'Phone Number', :required =>true  %>
  </div>

<br>

<br>
<p><em> This will be your form of payment when you request a service from us.
    </em></p>
<br><br>
  <div class="form-group field">
    <%= label_tag :name, "Cardholder Name" %>
    <%= text_field_tag :name, nil, name: nil, class: "form-control style" , :required =>true %>
  </div>

  <div class="form-group field">
    <%= label_tag :address, "Billing Address" %>
    <%= text_field_tag :address, nil, name: nil, class: "form-control style" , :required =>true %>
  </div>

  <div class="form-group field">
    <%= label_tag :address_city, "City" %>
    <%= text_field_tag :address_city, nil, name: nil, class: "form-control style" , :required =>true %>
  </div>

  <div class="form-group field ">
    <%= label_tag :address_state, "State" %>
    <%= text_field_tag :address_state, nil, name: nil, class: "form-control style", :required =>true %>
  </div>

  <div class="form-group field ">
    <%= label_tag :address_country, "Country" %>
    <%= text_field_tag :address_country, nil, name: nil, class: "form-control style", :required =>true %>
  </div>

  <div class="form-group field ">
    <%= label_tag :address_zip, "Zip Code" %>
    <%= text_field_tag :address_zip, nil, name: nil, class: "form-control style", :required =>true %>
  </div>

  <div class="form-group field">
    <%= label_tag :card_number, "Credit Card Number" %>
    <%= text_field_tag :card_number, nil, name: nil, class: "form-control style", :required =>true %>
  </div>
  <div class="form-group field ">
    <%= label_tag :card_code, "Security Code on Card (CVV)" %>
    <%= text_field_tag :card_code, nil, name: nil, class: "form-control style", :required =>true %>
  </div>
  <div class="form-group field">
    <%= label_tag :card_month, "Card Expiration" %>
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}%>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}%>
  </div>
  <div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>

<br><br>
<p> Your almost there!!! </p>
<br>
  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-lg btn-info' %>
  </div>
<% end %>
<br>
Already Have An Account? 
<%= render "devise/shared/links" %>
</div>
</center>
<br><br><br>
